

{{>_admin_sidebar}}
    <div class="main-panel">
    {{>_navbar}}
    <div class="content">
       <div class="container-fluid">
         <div class="row">
           <div class="col-md-12">
             <div class="card">
               <div class="card-header card-header-primary">
                 <h4 class="card-title ">Loan pendings</h4>
                 <p class="card-category"></p>
               </div>
               <div class="card-body">
                 <div class="table-responsive">
                   <table class="table">
                     <thead class=" text-primary">
                       <th>Name</th>
                       <th>Phone</th>
                       <th>Email</th>
                       <th>Deposit amount</th>
                       <th>Date</th>
                     </thead>
                     <tbody>
                        {{#each pends }}
                       <tr>
                         <td>{{firstName}}</td>
                         <td>{{phone}}</td>
                         <td>{{email}}</td>
                         <td class="text-primary">Ksh. {{loanamount}}</td>
                         <td>{{date}}</td>
                       </tr>
                       {{/each}}
                     </tbody>
                   </table>
                 </div>
               </div>
             </div>
           </div>
