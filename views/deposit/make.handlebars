      <div class="content">
        <div class="container col-md-12">

          {{>_msg}}
          {{>_errors}}
<!--================================================================--->
<div class="row">

<!-- Modal  paypal -->
<div class="modal fade" id="paypalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Deposit using Paypal</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

        <form action="/charge" method="post">

                  <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-key="{data-key goes here}"
                    data-amount=""
                    data-name="Table-Banking System"
                    data-description="Account creation Payment"
                    data-image=""
                    data-locale="auto">
                </script>
                <script>
                  // Hide default stripe button
                  document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                </script>

      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <i class="fas fa-user prefix grey-text"></i>
          <input type="text" id="orangeForm-name" value="{{user.firstName}}" name="fname" class="form-control validate">
          <label data-error="wrong" data-success="right"  for="orangeForm-name">Your Name</label>
        </div>
        <div class="md-form mb-5">
          <i class="fas fa-envelope prefix grey-text"></i>
          <input type="email" id="orangeForm-email" value="{{user.email}}" name="email"  class="form-control validate">
          <label data-error="wrong" data-success="right" for="orangeForm-email">Your email</label>
        </div>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn btn-deep-orange">Make Deposit</button>
      </div>
    </form>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#paypalForm">Continue with Paypal</a>
</div>
          <!--==============end modAL paypal===================-->


<!-- Modal cash Payment -->

<div class="modal fade" id="modalcashForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {{>_msg}}
      {{>_errors}}
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Deposit by cash payment </h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form class="" action="/deposit/make/{{user.id}}" method="post">
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <i class="fas fa-user prefix grey-text"></i>
          <input type="text" id="orangeForm-name" value="{{user.firstName}}" name="fname" class="form-control validate" readonly>
          <label  data-success="right"  for="orangeForm-name">Your Name</label>
        </div>
        <div class="md-form mb-5">
          <i class="fas fa-envelope prefix grey-text"></i>
          <input type="email" id="orangeForm-email" value="{{user.email}}" name="email"  class="form-control validate" readonly>
          <label  data-success="right" for="orangeForm-email">Your email</label>
        </div>

        <div class="md-form mb-4">
          <i class="fas fa-lock prefix grey-text"></i>
          <input type="number" id="orangeForm-pass" value="{{user.phone}}" name="phone" class="form-control validate">
          <label data-error="wrong" data-success="right" for="orangeForm-pass">Your Phone</label>
        </div>

        <div class="md-form mb-4">
          <i class="fas fa-lock prefix grey-text"></i>
          <input type="number" id="orangeForm-pass" value=" " name="amount" class="form-control validate">
          <label data-error="wrong" data-success="right" for="orangeForm-pass"> Enter Amount </label>
        </div>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn btn-deep-orange">Make Deposit</button>
      </div>

    </form>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="" class="btn  btn-rounded mb-4" data-toggle="modal" data-backdrop="static" data-target="#modalcashForm">Continue with Cash</a>
</div>

          <!--==============end modAL cash payment===================-->


