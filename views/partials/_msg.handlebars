{{#if success_msg}}
<div class="alert alert-info alert-dismissible text-center fade show" role="alert">{{success_msg}}
<button type="button" class="close" data-dismiss="alert" aria-label="close" name="button"><span aria-hidden="true">&times;</span></button>
</div>
{{/if}}

<!--===checking error message====-->

{{#if error_msg}}
<div class="alert alert-warning alert-dismissible text-center  fade show" role="alert">{{error_msg}}
<button type="button" class="close" data-dismiss="alert" aria-label="close" name="button"><span aria-hidden="true">&times;</span></button>
</div>
{{/if}}
